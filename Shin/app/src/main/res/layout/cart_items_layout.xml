<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#2fb6afaf">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/cart_product_image"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/cart_product_image"
            android:text="Product Name"
            android:id="@+id/cart_product_name"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:text="Product Quantity"
            android:textStyle="bold"
            android:id="@+id/cart_product_quantity"
            android:layout_marginRight="2dp"
            android:textAlignment="viewEnd"
            android:layout_toRightOf="@+id/cart_product_image"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:text="Product Decription"
            android:id="@+id/cart_product_description"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/cart_product_name"
            android:layout_toRightOf="@+id/cart_product_image"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Product Price"
            android:id="@+id/cart_product_price"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/cart_product_description"
            android:layout_toRightOf="@+id/cart_product_image"
            />


    </RelativeLayout>






</androidx.cardview.widget.CardView>